<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@Styles/estilos.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.fantasticoctoguacamole.VerDetallesCancelacionController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="title-label" text="Detalles de Venta Cancelada">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Folio Venta Original:" />
                        <Label fx:id="lblFolioOriginal" GridPane.columnIndex="1" />

                        <Label style="-fx-font-weight: bold;" text="Fecha de Venta:" GridPane.rowIndex="1" />
                        <Label fx:id="lblFechaVenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold;" text="Total de Venta:" GridPane.rowIndex="2" />
                        <Label fx:id="lblTotalVenta" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-weight: bold;" text="Vendedor:" GridPane.columnIndex="2" />
                        <Label fx:id="lblVendedor" GridPane.columnIndex="3" />

                        <Label style="-fx-font-weight: bold;" text="Fecha Cancelaci贸n:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="lblFechaCancelacion" style="-fx-text-fill: #FF9800; -fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold;" text="Usuario que Cancel贸:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Label fx:id="lblUsuarioCancelacion" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Motivo de Cancelaci贸n:" />
                        <TextArea fx:id="txtMotivo" editable="false" prefHeight="80.0" prefWidth="200.0" wrapText="true" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Productos de la Venta:" />
                        <TableView fx:id="tablaProductos" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="colProducto" prefWidth="250.0" text="Producto" />
                                <TableColumn fx:id="colCantidad" prefWidth="100.0" text="Cantidad" />
                                <TableColumn fx:id="colPrecioUnitario" prefWidth="150.0" text="Precio Unitario" />
                                <TableColumn fx:id="colSubtotal" prefWidth="150.0" text="Subtotal" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #FF9800;" text="Resumen de Cancelaci贸n" />
                                <Label fx:id="lblResumen" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;" text="Stock restaurado correctamente" />
                            </children>
                        </VBox>
                        <Button fx:id="btnCerrar" mnemonicParsing="false" onAction="#cerrarVentana" styleClass="button-secondary" text="Cerrar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
