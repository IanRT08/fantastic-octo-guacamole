<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.fantasticoctoguacamole.VerDetallesCancelacionController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Detalles de Venta Cancelada" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #FF9800;">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Folio Venta Original:" style="-fx-font-weight: bold;" />
                        <Label fx:id="lblFolioOriginal" GridPane.columnIndex="1" />

                        <Label text="Fecha de Venta:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
                        <Label fx:id="lblFechaVenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Total de Venta:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
                        <Label fx:id="lblTotalVenta" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Vendedor:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" />
                        <Label fx:id="lblVendedor" GridPane.columnIndex="3" />

                        <Label text="Fecha Cancelaci贸n:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="lblFechaCancelacion" style="-fx-text-fill: #FF9800; -fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Usuario que Cancel贸:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Label fx:id="lblUsuarioCancelacion" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Motivo de Cancelaci贸n:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtMotivo" editable="false" prefHeight="80.0" prefWidth="200.0" style="-fx-background-color: #FFF3E0; -fx-border-color: #FF9800;" wrapText="true" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Productos de la Venta:" style="-fx-font-weight: bold;" />
                        <TableView fx:id="tablaProductos" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="colProducto" prefWidth="250.0" text="Producto" />
                                <TableColumn fx:id="colCantidad" prefWidth="100.0" text="Cantidad" />
                                <TableColumn fx:id="colPrecioUnitario" prefWidth="150.0" text="Precio Unitario" />
                                <TableColumn fx:id="colSubtotal" prefWidth="150.0" text="Subtotal" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <HBox spacing="20.0" alignment="CENTER_RIGHT">
                    <children>
                        <VBox spacing="5.0" alignment="CENTER_RIGHT">
                            <children>
                                <Label text="Resumen de Cancelaci贸n" style="-fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                                <Label fx:id="lblResumen" text="Stock restaurado correctamente" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;" />
                            </children>
                        </VBox>
                        <Button fx:id="btnCerrar" mnemonicParsing="false" onAction="#cerrarVentana" text="Cerrar" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>